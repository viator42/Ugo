<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 填充的颜色 -->
    <solid android:color="@color/button_bg" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="@dimen/margin_large" />

    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="@dimen/margin_stanard"
        android:top="@dimen/margin_stanard"
        android:right="@dimen/margin_stanard"
        android:bottom="@dimen/margin_stanard"/>

</shape>
