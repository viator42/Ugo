<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viator42.ugo">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="channel_id"
            android:value="${channel_id}" />
        <meta-data
            android:name="app_name"
            android:value="${app_name}" />

        <activity
            android:name=".StartActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.mainpage.MainpageActivity"
            android:label="@string/title_activity_mainpage"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.branddetail.BrandDetailActivity"
            android:label="@string/goods_detail"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.user.LoginActivity"
            android:label="@string/login"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.goods.GoodsActivity"
            android:label="@string/title_activity_goods"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.goods.ScaleImageViewActivity"
            android:label="@string/title_activity_goods"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.dev.DevActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.order.OrderConfirmActivity"
            android:label="@string/title_activity_order_confirm"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.address.AddressActivity"
            android:label="@string/title_activity_address"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.address.InsertAddressActivity"
            android:label="@string/title_activity_address"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.user.RegisterActivity"
            android:label="@string/register"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.category.CategoryActivity"
            android:label="@string/category"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.webview.WebviewActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.goodscollect.GoodsCollectActivity"
            android:label="@string/goods_collect"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.brandcollect.BrandCollectActivity"
            android:label="@string/brand_collect"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.settings.SettingsActivity"
            android:label="@string/settings"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.profile.ProfileActivity"
            android:label="@string/profile"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.text.TextDisplayActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.reply.ReplyActivity"
            android:label="@string/reply"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.aboutus.AboutUsActivity"
            android:label="@string/about_us"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.dev.BindingTesterActivity"
            android:launchMode="singleTop" />
        <activity android:name=".module.dev.BindingListTesterActivity"></activity>
    </application>

</manifest>